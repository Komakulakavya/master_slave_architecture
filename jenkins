pipeline {
    agent { label 'slave1' }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/<your-repo>.git'
            }
        }

        stage('Build') {
            steps {
                bat 'javac HelloWorld.java'
            }
        }

        stage('Run') {
            steps {
                bat 'java HelloWorld'
            }
        }

        stage('Post-Build') {
            steps {
                echo 'Build executed successfully on Windows slave.'
            }
        }
    }
}

